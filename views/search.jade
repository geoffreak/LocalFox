table.table.table-bordered.table-striped.table-hover
	thead
		tr
			th(style='width:70px')
			th Title
			th(style='width:200px')
	tbody
		- for (var i = 0; i < results.length; i++)
			- var manga = results[i];
			tr
				td(style="text-align:center;")
					- if (manga.cover)
						img(src=manga.cover,style='height: 99px;')
					- else
						div(style='height: 99px;')
				td.leftbold
					span 
						strong
							a(href="/preview/"+manga.url+"/"+query)
								#{manga.title}
						small &nbsp;[From #{manga.scraper}]
					br
					em= manga.genres
				td
					a(href='/add/'+manga.uri) Add to LocalFox
